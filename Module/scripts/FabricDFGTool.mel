global proc fabricSaveDFG()
{
	string $selNodes[] = `ls -sl -et "dfgMayaNode"`;
	if(size($selNodes) > 0)
		dfgExportJSON -mayaNode $selNodes[0] -f "";
}

global proc fabricLoadDFG()
{
	string $selNodes[] = `ls -sl -et "dfgMayaNode"`;
	if(size($selNodes) > 0)
		dfgImportJSON -mayaNode $selNodes[0] -f "";
}
